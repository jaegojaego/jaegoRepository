<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jaego.web.DAO.CSBoardMapper">
	
	<insert id="write" parameterType="CSBoard">
		insert into
			csboard(
				boardnum
				,id
				,title
				,content
				,hits
				,type
			)values(
				csboard_seq.nextval
				,#{id}
				,#{title}
				,#{content}
				,0
				,#{type}
			)
	</insert>
	
	<select id="getAll" resultType="CSBoard">
		select
			boardnum
			,id
			,title
			,content
			,inputdate
			,hits
			,originalfile
			,savedfile
			,type
		from
			csboard
		order by
			boardnum desc
	</select>
	
	<select id="getAllCount" resultType="int">
		select
			count(*)
		from
			csboard
	</select>	

</mapper>